= form_for @group do |f|
  -if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :group_type
    = f.number_field :group_type
  .field
    = f.label :hour_limit
    = f.number_field :hour_limit
  .actions
    = f.submit 'Save'
