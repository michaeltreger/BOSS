= form_for @lab do |f|
  -if @lab.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lab.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @lab.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :unit
    = f.select('groups', @units.collect {|unit| [ unit.name, unit.id ] })

  .actions
    = f.submit 'Save'
