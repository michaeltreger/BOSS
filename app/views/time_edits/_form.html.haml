= form_for @time_edit do |f|
  -if @time_edit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@time_edit.errors.count, "error")} prohibited this Time Edit from being saved:"
      %ul
        - @time_edit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :duration
    = f.number_field :duration
  .field
    = f.label :lab_id
    = f.number_field :lab_id
  .field
    = f.label :comment
    = f.text_field :comment
  .field
    = f.label :calendar_id
    - if @current_user.isAdmin?
      = collection_select(:calendar, :id, @mycalendars, :id, :full_name)
    - else
      = collection_select(:calendar, :id, @mycalendars, :id, :name)
  .actions
    = f.submit 'Save'
