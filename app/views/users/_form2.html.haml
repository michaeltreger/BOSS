= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :group
    = f.select('groups', @groups.collect {|group| [ group.name, group.id ] })

  .actions
    = f.submit 'Save'
