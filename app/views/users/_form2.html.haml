= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_type
    = f.number_field :user_type

  .field
    = f.label :initials
    = f.text_field :initials

  .actions
    = f.submit 'Save'
