= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :user_type
    = f.select(:user_type, [[:Admin, 0], [:Sched, 1], [:Employeed, 2]])
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :initials
    = f.text_field :initials
  .field
    = f.label :calid
    = f.text_field :cas_user
  .actions
    = f.submit 'Save'
