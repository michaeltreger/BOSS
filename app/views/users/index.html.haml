-@page_title = "Users"
Active Users
%table
  %tr
    %th Type
    %th Name
    %th Initials
    %th Phone
    %th Email
    %th
    %th
    %th
  - @users.each do |user|
    %tr
      - if user.isAdmin?
        %td Administrator
      - elsif user.isScheduler?
        %td Scheduler
      - else
        %td Employee
      %td= user.name
      %td= user.initials
      %td= user.phone
      %td= user.email
      %td= link_to 'View user\'s page', user
      %td= link_to 'Modify user', edit_user_path(user)#"/admin/users/edit/#{user.id}"
      %td= link_to 'Deactivate user', { :action => "deactivate", :id => user.id }, :confirm => 'Are you sure?'

%br

Deactivated Users
%table
  %tr
    %th Type
    %th Name
    %th Initials
    %th Phone
    %th Email
    %th
    %th
    %th
  - @deactivatedUsers.each do |user|
    %tr
      - if user.isAdmin?
        %td Administrator
      - elsif user.isScheduler?
        %td Scheduler
      - else
        %td Employee
      %td= user.name
      %td= user.initials
      %td= user.phone
      %td= user.email
      %td= link_to 'View user\'s page', user
      %td= link_to 'Modify user', edit_user_path(user)#"/admin/users/edit/#{user.id}"
      %td= link_to 'Activate user', { :action => "activateuser", :id => user.id }

