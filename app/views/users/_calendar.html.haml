= stylesheet_link_tag  "reset.css"
= stylesheet_link_tag  "jquery-ui-1.8.11.custom.css"
= stylesheet_link_tag  "jquery.weekcalendar.css"
= stylesheet_link_tag  "demo.css"
  
= javascript_include_tag "demo.js"
= javascript_include_tag "date.js"
= javascript_include_tag "jquery.weekcalendar.js"

%div#calendar
%div#event_edit_container
  = form_tag user_path
  %ul
    %li
      %label{:for=>"start"}Start Time:
      %select{:name=>"start"}
        %option{:value=>""}Select Start Time
    %li
      %label{:for=>"end"}End Time:
      %select{:name=>"end"}
        %option{:value=>""}Select End Time
    %li
      %label{:for=>"type"}Type:
      %select{:name=>"type"}
        %option{:value=>"prefer"}Prefer
        %option{:value=>"not_prefered"}N/P
        %option{:value=>"class"}Class
        %option{:value=>"obligation"}Obligation
    %li#description
      %label{:for=>"description"}Description: 
      %textarea{:name=>"description"}


