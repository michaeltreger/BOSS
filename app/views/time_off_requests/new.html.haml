- @page_title = 'Time Off Requests'
%h3 New Request

= form_tag time_off_requests_path do

  = label :time_off_request, :start_time, 'Start Time'
  = datetime_select :time_off_request, :start_time , :start_year => Time.current.year, :use_short_month => true

  = label :time_off_request, :end_time, 'End Time'
  = datetime_select :time_off_request, :end_time, :start_year => Time.current.year, :use_short_month => true

  = label :time_off_request, 'Reason'
  = text_area :time_off_request, :description

  = submit_tag 'Save Changes'
  
