- @page_title = 'Calendars'
%h3 My Availability Calendars
%table
  %tr
    %th Name
    %th Description
    %th Start
    %th End
    %th Last Modified
  - @acalendars.each do |c|
    %tr
      %td= link_to c.name, calendar_path(c)
      %td= c.description
      %td= c.period.start_date
      %td= c.period.end_date
      %td= c.updated_at.strftime('%a, %m/%d -- %I:%M%p')

