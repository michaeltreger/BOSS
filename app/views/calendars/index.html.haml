- @page_title = 'Calendars'
.col-2  
  %h3 My Work Calendars
  %table
    %tr
      %th Name
      %th Description
      %th Last Modified
    - @wcalendars.each do |c|
      %tr
        %td= link_to c.name, calendar_path(c)
        %td= c.description
        %td= c.updated_at.strftime('%a, %m/%d')
  %h3 All Work Calendars
  %table
    %tr
      %th Name
      %th Description
      %th Last Modified
    - @allcalendars.each do |c|
      %tr
        %td= link_to c.name, calendar_path(c)
        %td= c.description
        %td= c.updated_at.strftime('%a, %m/%d')
.col-2
  %h3 My Availability Calendars
  %table
    %tr
      %th Name
      %th Description
      %th Start
      %th End
      %th Last Modified
    - @acalendars.each do |c|
      %tr
        %td= link_to c.name, calendar_path(c)
        %td= c.description
        %td= c.period.start_date.strftime('%a, %m/%d')
        %td= c.period.end_date.strftime('%a, %m/%d')
        %td= c.updated_at.strftime('%a, %m/%d')
